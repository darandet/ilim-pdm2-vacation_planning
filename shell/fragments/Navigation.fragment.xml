<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt">

    <tnt:SideNavigation id="sideNavigation" visible="false">
        <tnt:item>
            <tnt:NavigationList itemSelect="onSideNavigation">
                <tnt:NavigationListItem key="NavToPlan" text="Запланировать отпуск" icon="sap-icon://appointment"
                                        id="planNavItem"/>
                <tnt:NavigationListItem key="NavToApprov" text="Согласовать отпуск" icon="sap-icon://sap-box"
                                        id="approveNavItem"/>
                <tnt:NavigationListItem key="NavToControl" text="Контроль планирования" icon="sap-icon://approvals"
                                        id="controlNavItem"/>
            </tnt:NavigationList>
        </tnt:item>
        <tnt:fixedItem>
            <tnt:NavigationList itemSelect="onSideNavigation">
                <tnt:NavigationListItem key="switchState" text="Свернуть" icon="sap-icon://menu2"/>
            </tnt:NavigationList>
        </tnt:fixedItem>
    </tnt:SideNavigation>

</core:FragmentDefinition>