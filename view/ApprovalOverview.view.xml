<mvc:View
        controllerName="ilim.pdm2.vacation_planning.controller.ApprovalOverview"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        xmlns:f="sap.f"
        displayBlock="true"
        height="100%">

    <f:DynamicPage height="100%" toggleHeaderOnTitleClick="false" showFooter="false" id="ManagerSpaceId">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="График отпусков на 2017 г."/>
                </f:heading>
                <f:actions>
                    <SegmentedButton selectedKey="allEmployees">
                        <items>
                            <SegmentedButtonItem key="allEmployees" icon="sap-icon://manager" />
                            <SegmentedButtonItem key="directEmployees" icon="sap-icon://family-care" />
                        </items>
                    </SegmentedButton>
                </f:actions>
                <f:expandedContent>
                    <Button icon="sap-icon://arrow-down"
                            type="Transparent"/>
                </f:expandedContent>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="false">
                <f:content>
                    <FlexBox 	direction="Row"
                                alignItems="Center"
                                justifyContent="Center"
                                fitContainer="true">
                        <items>
                            <SegmentedButton selectedKey="approvalTab" width="18rem" select="onViewChange">
                                <items>
                                    <SegmentedButtonItem key="approvalTab" icon="sap-icon://hr-approval"
                                                         text="Согласование"/>
                                    <SegmentedButtonItem key="overviewTab" icon="sap-icon://bbyd-dashboard"
                                                         text="Обзор"/>
                                </items>
                            </SegmentedButton>
                        </items>
                    </FlexBox>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <!--<f:content>-->
            <!--<mvc:XMLView viewName="ilim.pdm2.vacation_planning.view.ApprovalDashboard" height="100%"/>-->
        <!--</f:content>-->
    </f:DynamicPage>

</mvc:View>