<mvc:View
        controllerName="ilim.pdm2.vacation_planning.controller.PlanCreate"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        xmlns:u="sap.ui.unified"
        xmlns:l="sap.ui.layout"
        displayBlock="true"
        busy="{contentState>/busy}">

    <l:Grid defaultSpan="L7 M12 S12" class="sapUiSmallMarginTop" hSpacing="0.5">
        <l:content>
            <u:Calendar width="99%"
                    id="calendar"
                    intervalSelection="true"
                    months="2"
                    select="onDateRangeSelect">
            </u:Calendar>
            <Table fixedLayout="false" items="{data>/}" id="vacationsTable">
                <headerToolbar>
                    <Toolbar>
                        <DateRangeSelection id="VacationRangeInput"/>
                        <ToolbarSpacer/>
                        <Button	type="Emphasized" text="{i18n>vacation.addButton}" press="onAddVacation"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column vAlign="Middle">
                        <Text text="{i18n>vacation.table.begda}" />
                    </Column>
                    <Column vAlign="Middle">
                        <Text text="{i18n>vacation.table.endda}" />
                    </Column>
                    <Column vAlign="Middle">
                        <Text text="{i18n>vacation.table.status}" />
                    </Column>
                    <Column>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{data>begda}"/>
                            <Text text="{data>endda}"/>
                            <ObjectStatus text="{path: 'data>status', formatter: '.formatter.vacationStatus'}"
                                          state="{path: 'data>status', formatter: '.formatter.vacationState'}"/>
                            <Button icon="sap-icon://edit" press="onShowActions"/>
                        </cells>
                    </ColumnListItem>
                </items>
                <layoutData>
                    <l:GridData span="L5 M12 S12" />
                </layoutData>
            </Table>
        </l:content>
    </l:Grid>
</mvc:View>