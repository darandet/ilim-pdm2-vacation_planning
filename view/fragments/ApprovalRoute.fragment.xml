<core:FragmentDefinition
        xmlns:m="sap.m"
        xmlns="sap.suite.ui.commons"
        xmlns:core="sap.ui.core">

    <Timeline
            id="idRouteTimeline"
            axisOrientation="Vertical"
            enableScroll="false"
            enableDoubleSided="false"
            lazyLoading="true"
            textHeight="automatic"
            sort="false"
            showHeaderBar="false"
            showIcons="false"
            content="{oData>ToApprRoute}">
        <content>
            <TimelineItem
                    userNameClickable="true"
                    title="{oData>ApproverRoleText}"
                    userName="{oData>ApproverName}">
            </TimelineItem>
        </content>
    </Timeline>

</core:FragmentDefinition>