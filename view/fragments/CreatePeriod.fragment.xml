<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:f="sap.ui.layout.form"
        xmlns:core="sap.ui.core">

    <MessageStrip
            text="Уведомления будут отправлены при открытии периода"
            type="Information"
            showIcon="true"
            class="sapUiSmallMargin">
    </MessageStrip>
    <f:SimpleForm id="CreatePeriodForm"
                  editable="true"
                  layout="ResponsiveGridLayout"
                  breakpointM="300"
                  labelSpanXL="5"
                  labelSpanL="5"
                  labelSpanM="5"
                  labelSpanS="12"
                  adjustLabelSpan="false"
                  emptySpanXL="0"
                  emptySpanL="0"
                  emptySpanM="0"
                  emptySpanS="0"
                  columnsXL="1"
                  columnsL="1"
                  columnsM="1"
                  singleContainerFullSize="false" >
        <f:content>
            <Label text="БЕ"/>
            <Select id="balanceUnit" forceSelection="false" selectedKey="{masterRecord>/bukrs}" items="{bukrs>/}">
                <items>
                    <core:Item text="{bukrs>text}" key="{bukrs>bukrs}"/>
                </items>
            </Select>
            <Label text="Год планирования"/>
            <Input maxLength="4" type="Number" value="{masterRecord>/year}"/>
            <Label text="Срок внесения данных"/>
            <DatePicker valueFormat="dd.MM.yyyy" displayFormat="long" value="{masterRecord>/deadline}"/>
            <Label text="Макс. процент отсустствия"/>
            <Input maxLength="2" type="Number" value="{masterRecord>/absence}"/>
            <Label/>
            <CheckBox text="Отправить уведомления" selected="{masterRecord>/notify}"/>
        </f:content>
    </f:SimpleForm>

</core:FragmentDefinition>