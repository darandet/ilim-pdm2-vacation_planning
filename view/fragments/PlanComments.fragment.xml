<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">

    <List items="{oData>ToComments}">
        <FeedListItem
                sender="{oData>EmployeeName}"
                iconDensityAware="false"
                info="{oData>RoleText}"
                timestamp="{ parts: [{path: 'oData>CommentDate'}, {path: 'oData>CommentTime'}], formatter: .formatter.planCommentTimestamp }"
                text="text2" />
        <FeedListItem
                sender="Кожанова Н.Н."
                senderPress="onPress"
                iconDensityAware="false"
                info="Отклонение"
                timestamp="March 04 2013 16:40"
                text="text2" />
    </List>
</core:FragmentDefinition>