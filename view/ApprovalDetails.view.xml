<mvc:View
        controllerName="ilim.pdm2.vacation_planning.controller.ApprovalDetails"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        xmlns:f="sap.f"
        displayBlock="true"
        height="100%"
        id="ApprovalDetails">

    <Panel backgroundDesign="Transparent">
        <headerToolbar>
            <Toolbar>
                <content>
                    <Button type="Back" press="onBackToInbox"/>
                    <ToolbarSpacer/>
                    <Title text="{i18n>details.header}" level="H2"/>
                    <ToolbarSpacer/>
                    <SegmentedButton select="onDataViewChange" id="dataViewChangeButton">
                        <items>
                            <SegmentedButtonItem key="tableView" icon="sap-icon://table-view"
                                                 id="tableViewButton"/>
                            <SegmentedButtonItem key="timelineView" icon="sap-icon://accelerated"
                                                 id="timelineViewButton"/>
                        </items>
                    </SegmentedButton>
                </content>
            </Toolbar>
        </headerToolbar>
        <content>
            <Table fixedLayout="false" id="vacationsTable" class="sapUiSmallMarginTop"
                   items="{vacations>/}">
                <columns>
                    <Column vAlign="Middle" hAlign="Center">
                        <Text text="{i18n>details.table.employee}" />
                    </Column>
                    <Column vAlign="Middle" hAlign="Center">
                        <Text text="{i18n>details.table.period}" />
                    </Column>
                    <Column vAlign="Middle" hAlign="Center">
                        <Text text="{i18n>details.table.operation}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem class="sapUiTinyPaddingTop">
                        <cells>
                            <ObjectIdentifier title="{vacations>pernr}"/>
                            <Text   textAlign="Center"
                                    text="{vacations>begda} - {vacations>endda}"/>
                            <ObjectStatus text="{vacations>status}" state="Success" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Panel>
</mvc:View>